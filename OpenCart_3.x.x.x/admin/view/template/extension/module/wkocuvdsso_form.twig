{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-wkocuvdsso" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title_add }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
          </div><br>
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-manage-affiliate" class="form-horizontal">

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name ="name" id="input-name" class="form-control" {% if app['name'] is defined %}value="{{ app['name'] }}"{% endif %} />
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
            <div class="col-sm-10">
              <input type="text" name ="email" id="input-email" class="form-control" {% if app['email'] is defined %}value="{{ app['email'] }}"{% endif %} />
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-url">{{ entry_url }}</label>
            <div class="col-sm-10">
              <input type="text" name ="url" id="input-url" class="form-control" {% if app['redirect_url'] is defined %}value="{{ app['redirect_url'] }}"{% endif %} />
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-cancel_url">{{ entry_cancel_url }}</label>
            <div class="col-sm-10">
              <input type="text" name ="cancel_url" id="input-cancel_url" class="form-control" {% if app['cancel_url'] is defined %}value="{{ app['cancel_url'] }}"{% endif %} />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                <option value="0">{{ text_disabled }}</option>
                <option value="1" {% if app['status'] is defined and app['status'] %}selected{% endif %}>{{ text_enabled }}</option>
              </select>
            </div>
          </div>
      </form>
    </div>
  </div>
</div>
{{ footer }}
